{
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist",
      "sourceMap": false,
      "declaration": false,
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es5",
      "esModuleInterop": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2017",
        "dom"
      ],
      "paths": {
        "@src/*": [ "src/*" ],
        "@shared/*": [ "../../../shared/*" ]
      }
    },
    "exclude": [
      "node_modules",
      "dist",
      "tsc-out"
    ]
  }